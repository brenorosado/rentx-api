generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum UserRoles {
  USER
  ADMIN
}

model User {
  id            String @id @default(uuid())
  name          String
  email         String @unique
  cnh           String @unique
  password      String
  role          UserRoles

  createdAt     DateTime @default(now())
  createdBy     String?
  updatedAt     DateTime? @updatedAt()
  updatedBy     String?

  @@map("users")
}
