{
    "ts-node": {
      // Do not forget to `npm i -D tsconfig-paths`
      "require": ["tsconfig-paths/register"]
    },
    "compilerOptions": {
      "sourceMap": true,
      "outDir": "dist",
      "strict": true,
      "lib": ["esnext"],
      "esModuleInterop": true,
      "resolveJsonModule": true,
      "strictNullChecks": false,
      "baseUrl": ".",
      "paths": {
        "@database/*": [
          "src/database/*"
        ],
        "@repositories/*": [
          "src/repositories/*"
        ],
        "@controllersTest/*": [
          "src/controllers/*"
        ],
        "@services/*": [
          "src/services/*"
        ],
        "@routes/*": [
          "src/routes/*"
        ],
        "@errors/*": [
          "src/errors/*"
        ],
        "@utils/*": [
          "src/utils/*"
        ],
        "@middlewares/*": [
          "src/middlewares/*"
        ]
      }
    }
  }