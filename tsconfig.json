{
    "compilerOptions": {
      "sourceMap": true,
      "outDir": "dist",
      "strict": true,
      "lib": ["esnext"],
      "esModuleInterop": true,
      "resolveJsonModule": true,
      "strictNullChecks": false,
      "baseUrl": ".",
      "paths": {
        "@database/*": [
          "./src/database/*"
        ],
        "@repositories/*": [
          "./src/repositories/*"
        ],
        "@controllers/*": [
          "./src/controllers/*"
        ],
        "@services/*": [
          "./src/services/*"
        ],
        "@routes/*": [
          "./src/routes/*"
        ],
        "@errors/*": [
          "./src/errors/*"
        ],
        "@utils/*": [
          "./src/utils/*"
        ]
      }
    }
  }